<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/text_view_item_height"
    android:orientation="horizontal">
	<TextView 
	    android:paddingLeft="@dimen/padding_left_small"
	    android:id="@+id/path_name"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/text_view_item_height"
	    android:singleLine="true"
	    android:textSize="@dimen/textsize_mid"
	    android:layout_gravity="center_vertical"
	    android:gravity="center_vertical"
	    android:textAppearance="?android:attr/textAppearanceSmall"/>
	<ImageView 
	    android:layout_width="@dimen/text_view_item_img_width"
	    android:layout_height="@dimen/text_view_item_height"
	    android:background="@drawable/category_clear_right"/>
</LinearLayout>