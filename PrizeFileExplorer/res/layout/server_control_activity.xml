<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="0dip"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#394652"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="@dimen/wifi_state_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_state"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:textSize="@dimen/wifi_state_textsize"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/wifi_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wifi_state"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:textSize="@dimen/textsize_mid"
            android:textColor="#87888A"
            android:padding="@dimen/wifi_state_padding"
            style="?android:attr/textAppearanceSmall"/>
        <ImageView
            android:id="@+id/wifi_state_image"
            android:layout_marginTop="@dimen/padding_bottom_large"
            android:src="@drawable/wifi_state4"
            android:layout_width="@dimen/wifi_state_img_width"
            android:layout_height="@dimen/wifi_state_img_height"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/wifi_state_instruction_height"
        android:background="#FFFFFF"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/instruction_pre"
            android:layout_marginTop="@dimen/wifi_state_instruction_margin_top"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textsize_mid"        
            android:text="@string/instruction_pre"
            style="?android:attr/textAppearanceSmall" />          
        <TextView
            android:id="@+id/instruction"
            android:layout_marginTop="@dimen/wifi_state_instruction_margin_top"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textsize_mid"            
            android:text="@string/instruction"
            style="?android:attr/textAppearanceSmall" 
            android:layout_below="@+id/instruction_pre"/>

        <TextView
            android:id="@+id/ip_address"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minWidth="@dimen/wifi_ip_address_width"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textSize="@dimen/textsize_mid"
            android:textColor="#FFC00E"
            android:layout_marginTop="@dimen/wifi_ip_address_margin_top"
            android:paddingLeft="@dimen/wifi_ip_address_padding"
            android:paddingRight="@dimen/wifi_ip_address_padding"
            android:layout_below="@+id/instruction"/>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:layout_alignParentBottom="true"
		    android:layout_marginBottom="@dimen/wifi_state_instruction_margin_top">
		    <LinearLayout
            	android:id="@+id/start_stop_button"
            	android:layout_height="@dimen/start_stop_button_height"
            	android:layout_width="@dimen/start_stop_button_width"           	
            	android:gravity="center"
            	android:background="@drawable/btn_bottom_last">
            	<TextView
                	android:id="@+id/start_stop_button_text"
                	android:layout_height="wrap_content"
                	android:layout_width="wrap_content"
                	android:textSize="@dimen/textsize_mid"
                	android:drawablePadding="@dimen/start_stop_button_padding"
                	android:gravity="center" />
        	</LinearLayout>
		</LinearLayout>        
    </RelativeLayout>
</LinearLayout>
